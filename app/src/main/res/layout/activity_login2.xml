<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#182337"
    tools:context="com.example.welcome.navigation.login2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/mcr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PhotoShop"
                android:paddingRight="5dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textColor="#78C2D7"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/loginet"
            android:fontFamily="casual"
            android:hint="Username"
            android:drawableLeft="@drawable/user1"
            android:drawablePadding="20dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:layout_marginTop="100dp"
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:textColorHint="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/loginet"
            android:fontFamily="casual"
            android:hint="@string/password"
            android:lines="1"
            android:maxLines="1"
            android:inputType="text"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="20dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textColorHint="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password?"
            android:textColor="#BFC7D3"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btlog2"
            android:gravity="center"
            android:text="Login" />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dont'have an account?Signup!"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="15sp" />

</LinearLayout>