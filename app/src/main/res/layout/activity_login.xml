<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.welcome.navigation.LoginActivity"
    android:weightSum="1">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Userlogin form"
    android:layout_marginTop="10dp"
   android:layout_gravity="center"
    android:textSize="30sp"
    android:textColor="#5593ff"/>
    <EditText
        android:id="@+id/uname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="@string/username"/>
    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="@string/password"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/loginbuttion"
       android:layout_gravity="center"
       android:layout_marginTop="50dp"
       android:text="Login"
       android:id="@+id/bt_loginform"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password?"
        android:textColor="#473427"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register here"
        android:textColor="#473427"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>
